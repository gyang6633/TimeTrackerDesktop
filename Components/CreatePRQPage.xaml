<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.CreatePRQPage">
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="1*,1*">
        <!-- Input Section -->
        <StackLayout Grid.Row="0" Padding="10">
            <Label Text="Create Peer Review Question" FontSize="24" HorizontalOptions="Start" Margin="0,10,0,10" />
            <Entry Placeholder="Enter question text" Text="{Binding NewQuestionText}" />
            <Button Text="Submit Question" Command="{Binding SubmitQuestionCommand}" Margin="0,10,0,0" />
        </StackLayout>

        <!-- List of Questions -->
        <StackLayout Grid.Row="1" Grid.ColumnSpan="2" Padding="10">
            <Label Text="Current Questions" FontSize="20" HorizontalOptions="Start" />
            <CollectionView ItemsSource="{Binding Questions}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <!-- Binding to the QuestionText property -->
                            <Label Text="{Binding QuestionText}" FontSize="16" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </Grid>
</ContentPage>