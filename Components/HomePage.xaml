<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.HomePage">

    <StackLayout Padding="10">
        <!-- Calendar/Week Picker Section -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Previous Week Button -->
            <Button Text="Previous" Command="{Binding PreviousWeekCommand}" Grid.Column="0" />

            <!-- Week Start Date Picker -->
            <DatePicker x:Name="WeekStartDatePicker" Date="{Binding SelectedWeekStartDate, Mode=TwoWay}" Grid.Column="1" HorizontalOptions="Center" />

            <!-- Next Week Button -->
            <Button Text="Next" Command="{Binding NextWeekCommand}" Grid.Column="2" />
        </Grid>

        <!-- Section Picker -->
        <Picker Title="Select Section" ItemsSource="{Binding Sections}" ItemDisplayBinding="{Binding SectionName}" SelectedItem="{Binding SelectedSection}" />

        <!-- Student Hours Grid -->
        <Grid x:Name="StudentHoursGrid" Padding="10">
            <!-- The student hours grid will be populated dynamically from code-behind -->
        </Grid>
    </StackLayout>
</ContentPage>