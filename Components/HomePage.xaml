<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.HomePage"
             Title="Student Hours Log">

    <Grid Padding="10">
        <!-- First Column: Sections -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sections List (Left side) -->
        <CollectionView Grid.Column="0"
                        x:Name="SectionsCollectionView"
                        ItemsSource="{Binding Sections}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedSection}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding SectionName}" 
                               FontSize="Large"
                               BackgroundColor="LightBlue"
                               Padding="10"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Main Grid (Right side) -->
        <ScrollView Grid.Column="1" Orientation="Both">
            <Grid x:Name="StudentHoursGrid" ColumnSpacing="10" RowSpacing="10" Padding="10">
                <!-- Define your grid columns and rows dynamically in code-behind -->
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
