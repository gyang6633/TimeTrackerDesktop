<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.LogInPage"
             Title="Log In">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Log In"
               FontSize="Large"
               HorizontalOptions="Center"
               Margin="0, 0, 0, 20"/>

        <Entry Placeholder="Enter your username"
               WidthRequest="300"
               Margin="0, 20, 0, 15"/>

        <Entry Placeholder="Enter your password"
               IsPassword="True"
               WidthRequest="300"
               Margin="0, 20, 0, 15"/>
        
        <Label Text="No account yet? Register here!"
           FontSize="Micro"
           TextColor="blue"
           HorizontalOptions="Center"/>     

        <Button Text="Log In"
                WidthRequest="200"
                HeightRequest="50"
                BackgroundColor="#34C759"
                TextColor="White"
                Margin="0, 20, 0, 0"/>
    </StackLayout>
</ContentPage>