<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.LogInPage"
             BackgroundColor="Black">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Time Tracker"
               TextColor="White"
               FontSize="Large"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0, 0, 0, 20"/>

        <Label Text="Email Address"
               TextColor="White"/>
        <Entry Placeholder="Enter your email"
               WidthRequest="300"
               BackgroundColor="White"
               Margin="0, 10, 0, 15"/>

        <Label Text="Password"
               TextColor="White"/>
        <Entry Placeholder="Enter your password"
               IsPassword="True"
               BackgroundColor="White"
               WidthRequest="300"
               Margin="0, 10, 0, 15"/>
        
        <Label Text="No account yet? Register here!"
           FontSize="Micro"
           TextColor="#6200EA"
           HorizontalOptions="Center"/>     

        <Button Text="Login"
                FontAttributes="Bold"
                WidthRequest="200"
                HeightRequest="50"
                BackgroundColor="#6200EA"
                TextColor="White"
                Margin="0, 20, 0, 0"/>
    </StackLayout>
</ContentPage>